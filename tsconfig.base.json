{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "newLine": "LF",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,

    /* Additional Checks */
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
