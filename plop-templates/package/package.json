{
  "name": "{{ name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "license": "Apache-2.0",
  "author": "{{ author }}",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s clean build:tsc",
    "build:tsc": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib/*",
    "fmt": "yarn run -s prettier --write --list-different \"src/**/*.{ts,js}\"",
    "prepublish": "in-publish && run-s build || true",
    "test": "jest",
    "prettier": "prettier --single-quote --no-semi"
  },
  "dependencies": {
    "@vac-dsl/core": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.6",
    "@types/node": "^8.0.49",
    "in-publish": "^2.0.0",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.1",
    "ts-jest": "^21.2.2",
    "typescript": "^2.6.1"
  },
  "private": {{ private }},
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>(/.+)?/__tests__(/.+)?/fixtures/"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^@vac-dsl/([a-z]+(?:[-_][a-z]+)*)$": "<rootDir>/../$1/src",
      "^@vac-dsl/(.*)$": "<rootDir>/../$1",
      "^@common-fixtures/(.*)$": "<rootDir>/../core/src/__tests__/fixtures/$1"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@vac-dsl)"
    ],
    "mapCoverage": true
  }
}
